<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/save_score_show_score_dialog_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lilitaone_regular"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/save_score_player_name_dialog_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_score_show_score_dialog_fragment"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:fontFamily="@font/lilitaone_regular"
        android:textSize="30sp"
        android:hint="@string/player_name"
        android:maxLength="3"/>

</RelativeLayout>